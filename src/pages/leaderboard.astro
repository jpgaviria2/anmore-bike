              <div class="font-bold text-gray-900">Train Conductor</div>
              <div class="text-xs text-gray-600">Bike train routes</div>
            </div>
          </div>
        </div>
        
        <div class="border-2 border-gray-200 rounded-lg p-4 hover:border-green-400 transition">
          <div class="flex items-center gap-3 mb-2">
            <div class="text-3xl">üéì</div>
            <div>
              <div class="font-bold text-gray-900">Mentor</div>
              <div class="text-xs text-gray-600">Clinic volunteering</div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="mt-6 bg-blue-50 border-2 border-blue-200 rounded-lg p-4 text-center">
        <p class="text-sm text-blue-900">
          <strong>Note:</strong> Leaderboard data is fetched live from Nostr relays. 
          To see your contributions, make sure you're using the same profile key (nsec) you used to submit.
        </p>
      </div>
    </div>
  </div>
  
  <script>
    import { SimplePool, nip19 } from 'nostr-tools';
    
    const RECIPIENT_NPUB = 'npub19djteyezrkn9ppg6gjfsxl59pgxrwh76uju60lxtcvr5svj3cmlsf54ca2';
    const RELAYS = ['wss://relay.anmore.me', 'wss://relay.damus.io', 'wss://nos.lol', 'wss://relay.primal.net'];
    
    interface Contributor {
      npub: string;
      displayName: string;
      count: number;
      formTypes: { [key: string]: number };
      timestamps: number[];
    }
    
    function decodeNpub(npub: string): string | null {
      try {
        const decoded = nip19.decode(npub);
        return decoded.type === 'npub' ? decoded.data : null;
      } catch (e) {
        return null;
      }
    }
    
    function getBadge(count: number, formTypes: { [key: string]: number }): string {
      if (count >= 50) return 'üëë';
      if (count >= 25) return 'üî•';
      if (count >= 10) return 'üí™';
      if (count >= 5) return 'üåü';
      return 'üö¥';
    }
    
    function getSpecialBadges(formTypes: { [key: string]: number }): string[] {
      const badges: string[] = [];
      if (formTypes['Trail Building'] > 0) badges.push('üõ§Ô∏è');
      if (formTypes['Pump Track'] > 0) badges.push('üé¢');
      if (formTypes['Bike Train'] > 0) badges.push('üöÇ');
      if (formTypes['Bike Clinics'] > 0) badges.push('üéì');
      return badges;
    }
    
    async function fetchContributors(timeFilter: 'all' | 'month' | 'week'): Promise<Map<string, Contributor>> {
      const recipientPubkey = decodeNpub(RECIPIENT_NPUB);
      if (!recipientPubkey) throw new Error('Invalid recipient npub');
      
      const pool = new SimplePool();
      const contributors = new Map<string, Contributor>();
      
      let since = 0;
      const now = Math.floor(Date.now() / 1000);
      if (timeFilter === 'week') since = now - (7 * 24 * 60 * 60);
      if (timeFilter === 'month') since = now - (30 * 24 * 60 * 60);
      
      const events = await pool.querySync(RELAYS, {
        kinds: [4],
        '#p': [recipientPubkey],
        since,
        limit: 1000
      });
      
      for (const event of events) {
        const authorPubkey = event.pubkey;
        
        if (!contributors.has(authorPubkey)) {
          const authorNpub = nip19.npubEncode(authorPubkey);
          contributors.set(authorPubkey, {
            npub: authorNpub,
            displayName: 'bikeuser',
            count: 0,
            formTypes: {},
            timestamps: []
          });
        }
        
        const contrib = contributors.get(authorPubkey)!;
        contrib.count++;
        contrib.timestamps.push(event.created_at);
        
        // Try to extract form type from tags
        const formTypeTag = event.tags.find(t => t[0] === 'form-type');
        if (formTypeTag && formTypeTag[1]) {
          const formType = formTypeTag[1];
          contrib.formTypes[formType] = (contrib.formTypes[formType] || 0) + 1;
        }
      }
      
      pool.close(RELAYS);
      return contributors;
    }
    
    function renderLeaderboard(contributors: Map<string, Contributor>) {
      const loadingEl = document.getElementById('leaderboard-loading');
      const errorEl = document.getElementById('leaderboard-error');
      const emptyEl = document.getElementById('leaderboard-empty');
      const listEl = document.getElementById('leaderboard-list');
      
      if (loadingEl) loadingEl.classList.add('hidden');
      if (errorEl) errorEl.classList.add('hidden');
      
      if (contributors.size === 0) {
        if (emptyEl) emptyEl.classList.remove('hidden');
        if (listEl) listEl.classList.add('hidden');
        return;
      }
      
      if (emptyEl) emptyEl.classList.add('hidden');
      if (listEl) listEl.classList.remove('hidden');
      
      // Sort by contribution count
      const sorted = Array.from(contributors.values())
        .sort((a, b) => b.count - a.count);
      
      // Update stats
      const totalContributors = document.getElementById('total-contributors');
      const totalSubmissions = document.getElementById('total-submissions');
      const trailProposals = document.getElementById('trail-proposals');
      
      if (totalContributors) totalContributors.textContent = contributors.size.toString();
      if (totalSubmissions) {
        const total = sorted.reduce((sum, c) => sum + c.count, 0);
        totalSubmissions.textContent = total.toString();
      }
      if (trailProposals) {
        const trails = sorted.reduce((sum, c) => sum + (c.formTypes['Trail Building'] || 0), 0);
        trailProposals.textContent = trails.toString();
      }
      
      // Render list
      const html = sorted.map((contributor, index) => {
        const badge = getBadge(contributor.count, contributor.formTypes);
        const specialBadges = getSpecialBadges(contributor.formTypes);
        const allBadges = [badge, ...specialBadges].join(' ');
        
        const rankClasses = index === 0 ? 'bg-yellow-50' : index === 1 ? 'bg-gray-50' : index === 2 ? 'bg-orange-50' : 'bg-white';
        
        return `
          <div class="${rankClasses} px-6 py-4 hover:bg-green-50 transition">
            <div class="flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class="text-2xl font-bold text-gray-400 w-8">#${index + 1}</div>
                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center text-2xl">
                  ${badge}
                </div>
                <div>
                  <div class="font-bold text-gray-900">${contributor.displayName}</div>
                  <div class="text-xs text-gray-500 font-mono">${contributor.npub.slice(0, 16)}...</div>
                </div>
              </div>
              <div class="text-right">
                <div class="text-2xl font-bold text-green-600">${contributor.count}</div>
                <div class="text-xs text-gray-500">contributions</div>
                ${specialBadges.length > 0 ? `<div class="text-sm mt-1">${allBadges}</div>` : ''}
              </div>
            </div>
          </div>
        `;
      }).join('');
      
      if (listEl) listEl.innerHTML = html;
    }
    
    function showError(message: string) {
      const loadingEl = document.getElementById('leaderboard-loading');
      const errorEl = document.getElementById('leaderboard-error');
      const errorMessage = document.getElementById('error-message');
      
      if (loadingEl) loadingEl.classList.add('hidden');
      if (errorEl) errorEl.classList.remove('hidden');
      if (errorMessage) errorMessage.textContent = message;
    }
    
    let currentFilter = 'all';
    
    async function loadLeaderboard() {
      try {
        const contributors = await fetchContributors(currentFilter as any);
        renderLeaderboard(contributors);
      } catch (error) {
        console.error('Failed to load leaderboard:', error);
        showError(error instanceof Error ? error.message : 'Unknown error occurred');
      }
    }
    
    // Filter buttons
    document.querySelectorAll('.filter-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.filter-btn').forEach(b => {
          b.classList.remove('active', 'bg-green-600', 'text-white');
          b.classList.add('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
        });
        btn.classList.add('active', 'bg-green-600', 'text-white');
        btn.classList.remove('bg-gray-200', 'text-gray-700', 'hover:bg-gray-300');
        
        currentFilter = (btn as HTMLElement).dataset.filter || 'all';
        loadLeaderboard();
      });
    });
    
    // Initial load
    loadLeaderboard();
  </script>
  
  <style>
    .filter-btn.active {
      @apply bg-green-600 text-white;
    }
    .filter-btn:not(.active) {
      @apply bg-gray-200 text-gray-700 hover:bg-gray-300;
    }
  </style>
</Layout>
